<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="userData"
            type="com.varsity.dgmdashboard.model.LoginResponseModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10ssp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Employee Name"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/_10ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_rounded_border"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text='@{userData.userName != null ? userData.userName : "-"}'
                    android:textSize="@dimen/_12ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Date Of Birth"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/_10ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_rounded_border"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text='@{userData.dob != null ? userData.dob : "-"}'
                    android:textSize="@dimen/_12ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="PAN Card Details"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/_10ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_rounded_border"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text='@{userData.panNo != null ? userData.panNo : "-"}'
                    android:textSize="@dimen/_12ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="PF Number"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/_10ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_rounded_border"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text='@{userData.pfNo != null ? userData.pfNo : "-"}'
                    android:textSize="@dimen/_12ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Aadhaar Details"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/_10ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_rounded_border"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text='@{userData.aadhar != null ? userData.aadhar : "-"}'
                    android:textSize="@dimen/_12ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Gender"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/_10ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_rounded_border"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text='@{userData.gender != null ? userData.gender : "-"}'
                    android:textSize="@dimen/_12ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Blood Group"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/_10ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_rounded_border"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text='@{userData.bloodGroup != null ? userData.bloodGroup : "-"}'
                    android:textSize="@dimen/_12ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Mobile Number"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/_10ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_rounded_border"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text='@{userData.mobileNo != null ? userData.mobileNo : "-"}'
                    android:textSize="@dimen/_12ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="City"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/_10ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_rounded_border"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text='@{userData.city != null ? userData.city : "-"}'
                    android:textSize="@dimen/_12ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="State"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textColor="@color/dark_gray_text"
                    android:textSize="@dimen/_10ssp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edittext_rounded_border"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text='@{userData.state != null ? userData.state : "-"}'
                    android:textSize="@dimen/_12ssp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:backgroundTint="@color/color_yellow"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Sign Out"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    app:cornerRadius="@dimen/_5ssp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>